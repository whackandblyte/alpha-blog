<h1 align="center">All AlphaBloggers</h1>
<div align="center">
  <%= will_paginate %>
</div>
<%= @users.each do |user| %>
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <ul class="listing">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title"><%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles.any? %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user? Corresponding articles will be deleted, too!" } %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>